<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->

        <div class="user-panel">
            {{#if user}}
            <div class="pull-left image">
                <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>{{user.pseudo}}</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
            {{ else }}
                <div class="">
                    <a href="#"><i class="fa fa-circle text-error"></i> Not Online</a>
                </div>
            {{/if}}
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MENU</li>
            {{#if user}}
                <li><a href="#" id="logout"><i class="fa fa-circle-o text-red"></i> <span>Logout</span></a></li>
                <li><a href="/connectDevice"><i class="fa fa-circle-o text-yellow"></i> <span>Connect device</span></a></li>
                <li><a href="/manageDevices"><i class="fa fa-circle-o text-aqua"></i> <span>Manage devices</span></a></li>
            {{ else }}
                <li><a href="/register"><i class="fa fa-circle-o text-red"></i> <span>Register</span></a></li>
                <li><a href="/login"><i class="fa fa-circle-o text-yellow"></i> <span>Login</span></a></li>
            {{/if}}
        </ul>

    </section>
    <!-- /.sidebar -->
</aside>